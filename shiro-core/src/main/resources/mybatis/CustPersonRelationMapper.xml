<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.suteng.shiro.persistence.mapper.CustPersonRelationMapper">
    <delete id="deletePersonRelationBySourceId">
DELETE FROM cust_person_relation WHERE source_id=#{sourceId}
</delete>

    <delete id="deletePersonRelationByDestId">
DELETE FROM cust_person_relation WHERE source_id=#{sourceId} and dest_id=#{destId}
</delete>
</mapper>

